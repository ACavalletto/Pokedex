<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/header.ejs") %>
  </head>
  <body>
    <!-- pokemon variable -->
    <div id="header">
      <h1>Pokedex</h1>
      <a href="/new">
        <button class="addNew">Add Pokemon</button>
      </a>
    </div>
    <% for(let i = 0; i < pokemon.length; i++) {%>
    <div class="pokemonCard">
      <h4><%= pokemon[i].name%></h4>
      <br />
      <img src="<%= pokemon[i].img%> " />
      <form action='/<%=i%>?_method=DELETE' method="POST">
        <input type="submit" value="Delete">
    </form>
    </div>
    <% } %>
  </body>
</html>
