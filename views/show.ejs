<!DOCTYPE html>
<html lang="en">
<head>
<%- include("./partials/header.ejs") %> 
</head>
<body>
    <!-- variabels: id,name,img, type, stats, moves, damages, misc -->
    <div class="header">
        <h1>Pokedex</h1>
        <a href="/">Back</a>
        <a href="/new">Add Pokemon</a>
    </div>
    <div class="idCard">
        <h3><%=name%></h3><br>
        <img src="<%=img%>">
    </div>
    <div class="typeCard">
        <h4>Type:</h4>
        <% for(let i = 0; i < type.length; i++) {%>
            <p><%=type[i]%> </p>
        <%}%>  
    </div>
    <div class="statsCard">
        <h4>Stats:</h4>
        <% for(let key in stats){%> 
        <p><%=key%>: <%=stats[key]%>  </p>
    <%}  %> 
    <a href="/<%=index%>/edit">
        <button class="edit">Edit</button>
    </a>
    </div>
</body>
</html>